#include<stdio.h>
int main(){
    int n,sum=0;
   
    scanf("%d",&n);
    if(n==0){
        printf("Invalid input! Number of elements must be positive");
    }
    else{
        int arr[n];
    printf("Enter the elements: \n");
    for(int i=0;i<n;i++){
        scanf("%d",&arr[i]);
    }
    for(int i=0;i<n;i++){
        if(arr[i]%2==0){
            sum+=arr[i];
        }
    }
    printf("Sum of even numbers: %d\n",sum);
    }
    return 0;
}
