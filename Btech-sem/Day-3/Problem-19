#include<stdio.h>
int main(){
    int n,num=0;
    printf("Enter the number of rows: \n");
    scanf("%d",&n);
    for(int i=1;i<=n;i++){
         num=i;
        for(int j=1;j<=i;j++){
            printf("%d",num);
            num++;
            if(j<i){
                printf(" ");
            }
        }
        printf("\n");
    }
    return 0;
}
