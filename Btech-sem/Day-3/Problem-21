#include<stdio.h>
int main(){
    int n;
    printf("Enter the number of rows: \n");
    scanf("%d",&n);
    if(n>=1&&n<=20){
        for(int i=1;i<=n;i++){
            for(int j=1;j<=i;j++){
                printf("* ");
            }
            for(int k=1;k<=2*(n-i);k++){
                printf(" ");
            }
            for(int j=i;j<=i;j++){
                printf("* ");
            }
            printf("\n");
        }
    }
    else{
        printf("Invalid input! Enter a number between 1 and 20");
    }
    return 0;
}
