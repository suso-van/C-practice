#include<stdio.h>
void convertToBinary(int n) {
    if (n<0){
        printf("Invalid input! Decimal number must be non-negative.\n");
    }
    else if(n==0){
        printf("Binary equivalent: 0\n");
    }
    else{
          int binary[32];
          int index =0;
          while (n>0){
              binary[index++] =n%2;
               n/=2;
            }
          printf("Binary equivalent: ");
          for(int i=index-1; i>=0;i--){
               printf("%d", binary[i]);
            }
          printf("\n");

        }
} 
int main(){
    int n;
    scanf("%d",&n);
    
    convertToBinary(n);
    
    return 0;
}
