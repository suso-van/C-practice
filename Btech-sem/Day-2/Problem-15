#include<stdio.h>
int main(){
    int n,num=1;
    scanf("%d",&n);
     printf("Enter the number of rows:");
    int i;
    for(i=1;i<=n;i++){
        int j;
        for(j=1;j<=i;j++){
            printf("%d",num);
            num++;
            if(j<i){
                printf(" ");
            }
        }
       printf("\n"); 
    }
    return 0;
}
