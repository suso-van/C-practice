#include<stdio.h>
int main(){
    double a,b;
    int c;
    printf("Enter two numbers: ");
    scanf("%lf %lf",&a,&b);
    printf("Select an operation:\n1: Addition\n2: Subtraction\n3: Multiplication\n4: Division\n");
    printf("Enter your choice: ");
    scanf("%d",&c);
    switch(c){
        case 1:
        printf("Sum: %0.2lf",a+b);
        break;
        case 2:
        printf("Difference: %0.2lf",a-b);
        break;
        case 3:
        printf("Product: %0.2lf",a*b);
        break;
        case 4:
        if(a==0||b==0){
            printf("Division by zero is not allowed.");
        }
        else{
          printf("Quotient: %0.2lf",a/b);
        }
        break;
        default:
        printf("Invalid operation! Please enter a number between 1 and 4.");
        
    }
    return 0;
}
